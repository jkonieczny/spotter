{
  "name": "spotter",
  "version": "0.0.1",
  "description": "Spotter App",
  "main": "app.js",
  "scripts": {
    "watch": "watchify app.js -o public/bundle/js/bundle.js -v",
    "watch-css": "watch 'npm run build-css' public/css/ -d",
    "build-css": "cleancss -o public/bundle/css/bundle.css public/css/main.css --skip-rebase",
    "browserify": "browserify app.js | uglifyjs > public/bundle/js/bundle.js",
    "build": "npm run browserify",
    "start": "npm run watch & npm run watch-css & nodemon server.js"
  },
  "keywords": [
    "spotter"
  ],
  "author": "Robert Daly",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "express": "^4.13.4",
    "fluxxor": "^1.7.3",
    "html-minifier": "^2.1.5",
    "inline-css": "^2.2.2",
    "node-jsx": "^0.13.3",
    "react": "^15.0.2",
    "react-dom": "^15.0.2"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "catw": "^1.0.1",
    "clean-css": "^3.4.12",
    "connect-slashes": "^1.3.1",
    "nodemon": "^1.9.2",
    "reactify": "^1.1.1",
    "uglify-js": "^2.6.2",
    "watch": "^1.0.1",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
